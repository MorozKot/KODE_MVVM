<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".PersonFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="236sp"
        android:background="@color/LightBG_Secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="6.25sp"
            android:layout_height="10.54sp"
            android:layout_marginLeft="24.87sp"
            android:layout_marginTop="20.75sp"
            android:background="@drawable/ic_vector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/avatarUrlItem"
            android:layout_width="104sp"
            android:layout_height="104sp"
            android:layout_marginTop="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_goose" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarUrlItem">


            <TextView
                android:id="@+id/nameItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkText"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Алиса Иванова" />

            <TextView
                android:id="@+id/userTagItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4sp"
                android:layout_marginTop="2sp"
                android:textColor="@color/grayText"
                android:textSize="17sp"
                tools:text="al" />


        </LinearLayout>

        <TextView
            android:id="@+id/departmentItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:textColor="@color/grayTextSecondary"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:text="Designer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first">

        <ImageView
            android:id="@+id/star"
            android:layout_width="20.03sp"
            android:layout_height="19.13sp"
            android:layout_marginStart="18.01sp"
            android:layout_marginTop="28.44sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_star" />

        <TextView
            android:id="@+id/birthdayItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52sp"
            android:layout_marginTop="27sp"
            android:textColor="@color/darkText"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5 июня 1996" />

        <TextView
            android:id="@+id/ageItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26sp"
            android:layout_marginEnd="20sp"
            android:textColor="@color/grayText"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="24 года" />

        <ImageView
            android:id="@+id/phone"
            android:layout_width="19.93sp"
            android:layout_height="19.87sp"
            android:layout_marginStart="17.98sp"
            android:layout_marginTop="96.04sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_phone" />

        <TextView
            android:id="@+id/phoneItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52sp"
            android:layout_marginTop="95sp"
            android:textColor="@color/darkText"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="+7 (999) 900 90 90" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
